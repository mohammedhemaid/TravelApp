<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".common.PhotoViewerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/photoViewer"
        app:navigationIcon="@drawable/ic_close_light"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/photo"/>


    <me.relex.photodraweeview.PhotoDraweeView
        android:id="@+id/image_SimpleDraweeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:failureImageScaleType="centerInside"
        app:placeholderImage="@drawable/ic_placeholder"
        app:progressBarAutoRotateInterval="1000"
        app:progressBarImage="@drawable/ic_loading"
        app:progressBarImageScaleType="centerInside"
        app:placeholderImageScaleType="fitCenter"
        />
</LinearLayout>